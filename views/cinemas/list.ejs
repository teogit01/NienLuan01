  
  <style type="text/css">
      .badge{
        width: 90px;
      }
      .table-stats{
        font-family: none;
      }
  </style>

    <% if(message) {%>
        <div id='showMessage' style="text-align: right;padding-right: 10%" class="alert alert-<%- message.type %>">
            <%= message.message %>
        </div>
    <% } %>
  <div class="content">
            <!-- Animated -->
            <div class="animated fadeIn">
                <!-- Widgets  -->
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-1">
                                        <i class="pe-7s-cash"></i>
                                    </div>
                                    <div class="stat-content">
                                        <form>
                                            <label>nam</label>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-2">
                                        <i class="pe-7s-cart"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <div class="stat-text"><span class="count">3435</span></div>
                                            <div class="stat-heading">Sales</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-3">
                                        <i class="pe-7s-browser"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <div class="stat-text"><span class="count">349</span></div>
                                            <div class="stat-heading">Templates</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-4">
                                        <i class="pe-7s-users"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <div class="stat-text"><span class="count">2986</span></div>
                                            <div class="stat-heading">Clients</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Widgets -->
               
                <div class="clearfix"></div>
                <!-- Orders -->
                <div class="orders">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="box-title">Danh sách  </h4>
                                </div>
                                <div class="card-body--">
                                    <div class="table-stats order-table ov-h">
                                    <!-- <div class="table-stats order-table ov-h"> -->
                                        <table class="table table-hover">
                                            <thead>
                                                <tr >
                                                    <th class="serial">#</th>
                                                    <th class="avatar">Hình</th>
                                                    <th>ID</th>
                                                    <th>Tên phim</th>
                                                    <th>Đạo diễn</th>
                                                    <th>Thời gian </th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            <% films.forEach(function(film,index){ %>
                                                <tr>
                                                    <td class="serial"><%- index+1 %></td>
                                                    <td class="avatar">
                                                        <div class="round-img">
                                                            <a href="#"><img class="rounded-circle" src="images/avatar/1.jpg" alt=""></a>
                                                        </div>
                                                    </td>
                                                    <td> <%- film.id %> </td>
                                                    <td>  <span class="name"><%- film.name %></span> </td>
                                                    <td> <span class="product"><%- film.director %></span> </td>
                                                    <td><span class="count"><%- film.runTime %></span></td>
                                                    <% if (film.status == 0 || film.status == null){ %>
                                                    <td>
                                                        <span class="badge badge-pending">Off</span>
                                                    </td>
                                                    <% }else{ %>
                                                    <td>
                                                        <span class="badge badge-complete">On</span>
                                                    </td>
                                                    <%  } %>

                                                    <td>
                                                        <span><i style='font-size:15px' class='fas'>&#xf303;</i></span>
                                                        &nbsp&nbsp&nbsp
                                                        <a href='http://localhost:3000/cinemas/delete/<%- film.id %>'><span><i class='far fa-trash-alt' style='font-size:15px'></i></span></a>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                            </tbody>
                                        </table>
                                    </div> <!-- /.table-stats -->
                                </div>
                            </div> <!-- /.card -->
                        </div>  <!-- /.col-lg-8 -->                    
                    </div>
                </div>
                <!-- /.orders -->
               
            </div>
            <!-- .animated -->
        </div>

        <script type="text/javascript">
             $(document).ready(function(){
            setTimeout(function(){ 
                $('#showMessage').hide()
            }, 3000);
        });

        </script>